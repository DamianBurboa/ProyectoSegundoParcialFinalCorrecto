            <ComboBoxItem>Traje</ComboBoxItem>
            <ComboBoxItem>Camiseta</ComboBoxItem>
            <ComboBoxItem>Short</ComboBoxItem>
            <ComboBoxItem>Pantalon</ComboBoxItem>
            <ComboBoxItem>Chamarra</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="32,34,0,0" TextWrapping="Wrap" Text="Producto" VerticalAlignment="Top"/>
        <Button x:Name="btnagregar" Content="Agregar" HorizontalAlignment="Left" Margin="157,58,0,0" VerticalAlignment="Top" Width="75" Height="19" Click="Btnagregar_Click"/>
        <Grid x:Name="grdProducto" HorizontalAlignment="Left" Width="716" Margin="32,77,0,-179.6" Grid.RowSpan="2" RenderTransformOrigin="0.501,0.798"/>
    </Grid>
</Window>
